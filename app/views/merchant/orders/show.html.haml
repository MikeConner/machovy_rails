= render :partial => 'shared/flash_messages'
.row.blogpost-page
  %p
    %b Purchased:
    = @order.description
  %p 
    %b Total Amount:
    = number_to_currency(@order.total_cost)
  - if !@order.bitcoin_invoice.nil?
    - if @frame_content.nil?
      %iframe{:width => "480", :height => "295", :frameborder => "0", :allowfullscreen => "true", :src => @order.bitcoin_invoice.invoice_url }   
    - else
      = @frame_content.html_safe
  - if admin_user?
    %p
      %b Quantity:
      = @order.quantity
    %p
      %b= pluralize(@order.vouchers.count, "Voucher")
      %table
        %col{:width => "100"}/
        %col{:width => "100"}/
        %col{:width => "100"}/
        %col{:width => "100"}/
        %col{:width => "100"}/
        %col{:width => "300"}/
        %tr
          %th ID
          %th Status
          %th Issued
          %th Expires
          %th Redeemed
          %th Comments
        - @order.vouchers.each do |voucher|
          -# Consider rendering merchant/vouchers/show -- not sure if it has the table format, though
          = render :partial => 'voucher', :locals => { :v => voucher }  
