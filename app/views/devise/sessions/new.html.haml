.container
  .space-large
  .row
    = render :partial => 'shared/flash_messages'
    .span5.offset1
      .sign-in-title
        %h4 Already a member? Sign in:
      .sign-in-body
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = f.label :email
          %div
            = f.email_field :email
          = f.label :password
          %div
            = f.password_field :password
          - if devise_mapping.rememberable?
            %div
              %br
              = f.check_box :remember_me 
              = f.label :remember_me
          .sign-in-footer
            = f.submit "Sign in", {:class => 'btn btn-danger'}
            = render :partial => "devise/shared/sign_in_links"
    .span5
      .sign-in-title
        %h4= I18n.t('create_account_action')
      .sign-in-body.sign-up-block
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = f.label :email
          %div
            = f.email_field :email
            %p.help-block 
              Type carefully. You will be sent a confirmation email.
          = f.label :password
          %div
            = f.password_field :password
            %p.help-block
              The longer the better. Include numbers for protein.
          = f.label :password_confirmation
          %div
            = f.password_field :password_confirmation
          .sign-in-footer
            = f.submit I18n.t('create_account'), {:class => 'btn btn-danger'}
.push
