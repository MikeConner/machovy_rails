.space.hidden-phone
= render :partial => 'shared/flash_messages'
.row-fluid
  .span6
    .sign-in-title
      %h4 Already a member? Sign in:
    .sign-in-body
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        = f.email_field :email, {:placeholder => 'Email'}
        %br
        = f.password_field :password, {:placeholder => 'Password'}
        - if devise_mapping.rememberable?
          %br
          = f.check_box :remember_me 
          = f.label :remember_me
        .sign-in-footer
          = f.submit "Sign in", {:class => 'btn btn-danger', :style => 'margin-bottom:10px;'}
          = render :partial => "devise/shared/sign_in_links"
  .span6
    %br.space.hidden-desktop
    .sign-in-title
      %h4= I18n.t('create_account_action')
    .sign-in-body.sign-up-block
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        %p.help-block 
          Type carefully. You will be sent a confirmation email.
        = f.email_field :email, {:placeholder => 'Email'}
        %p.help-block
          = I18n.t('password_prompt').html_safe
        = f.password_field :password, {:placeholder => 'Password'}
        = f.password_field :password_confirmation, {:placeholder => 'Password Confirmation'}
        .sign-in-footer
          = f.submit I18n.t('create_account'), {:class => 'btn btn-danger'}
          = link_to 'Merchant? Create an account here', new_user_registration_path, :class => 'btn btn-info pull-right'
.push.hidden-phone
