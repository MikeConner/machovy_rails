!!!
%head
  %meta{:content => 'text/html', :charset => 'UTF-8', 'http-equiv' => 'Content-Type'}
  %meta{:name => 'viewport', :content => "initial-scale=1, maximum-scale=1" }
  %meta{:name => 'viewport', :content => "width=device-width" }
  %meta{:name => 'stripe-key', :content => STRIPE_PUBLIC_KEY }
  %title M A C H O V Y
  = favicon_link_tag 
  = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Oswald:300,400"
  = stylesheet_link_tag "application", media: "all", :debug => true
  = stylesheet_link_tag "bootstrap_and_overrides", media: "all", :debug => true
  = javascript_include_tag "https://js.stripe.com/v1/"
  = javascript_include_tag "application"
  = csrf_meta_tags
  = render 'layouts/application/shim'
%body
  = render 'layouts/application/header'
  .container.main
    - flash.each do |key, value|
      %div{:class => "alert alert-#{key}"}
        %a.close{"data-dismiss" => "alert"} Ã—
        = content_tag(:div, value)
    = yield
    %br/
    %br/
    %br/  
  = render 'layouts/application/footer'

