#nav.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:href => '#', 'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
        = link_to(image_tag("logo.png", :class => "brand", :alt => "logo"), root_path)
      .nav-collapse
        %ul.nav
          %li.dropdown
            %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
              Metro
              %b.caret
            %ul.dropdown-menu
              - Metro.all.each do |metro|
                %li
                  = link_to metro.name, metro_filter_path(:metro => metro.name)
          - if current_user.nil?
            %li.dropdown.pull-right
              = link_to 'Sign In', new_user_session_path
            %li.dropdown.pull-right
              = link_to 'Register Now', new_user_registration_path
          - else
            - if current_user.has_role?(Role::MERCHANT)
              %li.dropdown
                %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
                  MERCHANT
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'My Deals', promotions_path
                  %li
                    = link_to 'My Vouchers', merchant_vouchers_path
                  %li 
                    = link_to 'Reports', reports_merchant_vendor_path(current_user.vendor)
                  %li
                    = link_to 'Payments', show_payments_merchant_vendor_path(current_user.vendor)
            - else
              %li.dropdown
                = link_to 'My Vouchers', merchant_vouchers_path 
              - if admin_user?
                %li.dropdown
                  %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
                    Admin
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Site Admin', site_admin_path
                    - if current_user.has_role?(Role::SUPER_ADMIN)
                      %li
                        = link_to 'Rails Admin', rails_admin_path
            - if current_user.has_role?(Role::MERCHANT)
              %li.dropdown
                = link_to 'LOG OUT', destroy_user_session_path, :method => :delete
            - else
              %li.dropdown
                %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
                  ACCOUNT
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'Edit Profile', edit_profile_user_path(current_user)
                  %li
                    = link_to 'LOG OUT', destroy_user_session_path, :method => :delete
        %ul.nav.pull-right
          - if !current_user.nil?
            %li
              == Welcome, #{current_user.email}
          %li.dropdown 
            = link_to 'Deals & Interests', deals_path(:deals => true)
          %li.dropdown
            = link_to 'Lifestyle', curators_path
