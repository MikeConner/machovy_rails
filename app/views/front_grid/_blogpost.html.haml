.skinnybox.box.tallbox.isotope-item.item
  - post = BlogPost.find(content)
  .imgcropblog
    - if !post.associated_image.file.nil?
      = link_to image_tag(post.associated_image_url(:blog_content_photo).to_s, :style => 'width:100%;'), blog_post_path(post)
    - else
      - if !post.curator.nil?
        = link_to image_tag(post.curator.picture_url(:product_front_page).to_s, :style => 'width:100%;'), blog_post_path(post)
  .blogitem
    %h5
      = link_to truncate(post.title, :length => 25), blog_post_path(post)
    .borderLine
      .borderLine-left &nbsp;
      .borderLine-right &nbsp;
      %p
        = post.truncated_body(:length => 120)
