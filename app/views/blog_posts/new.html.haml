#content-header
  %h1 New Blog Post
#breadcrumb
  <a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
  <a href="#" class="current">Front Page Manager</a>
.container-fluid
  .row-fluid
    .twelve.columns
      .widget-box
        .widget-title
          %h5 Front Page Manager
        .widget-content.nopadding
          -# No form element! Screws up real form
          .form-horizontal
            = javascript_include_tag "ckeditor/init"
            = form_for @blog_post do |f|
              = render :partial => 'shared/error_messages', :locals => { :errors => @blog_post.errors, :name => 'Blog Post' }
              = render :partial => 'blog_fields', :locals => { :f => f }
              .actions
                = f.submit 'Create Blog Post'
