%h1 Listing Blog Posts
%table.table.zebra-striped
  %tr
    %th Title
    %th Body
    %th Posted
    %th Active
    %th Curator
    %th Weight
  - @blog_posts.each do |post|
    %tr
      %td= link_to post.title, edit_blog_post_path(post)
      %td= post.truncated_body(:length => 100)
      %td== #{time_ago_in_words(post.created_at)} ago
      - if post.activation_date > Time.now
        %td== #{time_ago_in_words(post.activation_date)} ago
      - else
        %td== on #{time_ago_in_words(post.activation_date)}
      %td= post.curator.nil? ? 'None' : post.curator.name
      %td= post.weight
