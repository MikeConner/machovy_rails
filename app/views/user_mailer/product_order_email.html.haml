%h2 Thank you for your order!
%p== You recently purchased #{number_to_word(@order.quantity)} of these: #{@order.promotion.title} for #{number_to_currency(@order.total_cost)}
- if @order.shipping_address_required?
  %p== Your order will be shipped to #{@order.shipping_address}.
- else
  %p== Please pick up your order at #{@order.promotion.vendor.name}, #{@order.promotion.vendor.map_address}.
%br/
- @order.vouchers.each do |voucher|
  %p== Voucher #{voucher.uuid}
- if !@order.promotion.voucher_instructions.blank?
  %h4 Voucher instructions
  %p= @order.promotion.voucher_instructions
- if !@order.promotion.limitations.blank?
  %h4 Fine Print
  %p= @order.promotion.limitations
.page
