#nav.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %ul.nav
        %li.dropdown
          %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
            Metro
            %b.caret
          %ul.dropdown-menu
            %li.nav-label Nearest Location
            - Metro.all.each do |metro|
              %li
                = link_to metro.name, metro_filter_path(:metro => metro.name)
        %li.dropdown 
          = link_to 'Deals & Interests', deals_path(:deals => true)
        %li.dropdown
          = link_to 'Lifestyle', curators_path
      %ul.nav.pull-right
        - if current_user.nil?
          %li.dropdown.pull-right.hidden-phone
            = link_to 'Sign in / Register', new_user_session_path
        - else
          %li.dropdown.pull-right
            %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
              Account
              %b.caret
            - if current_user.has_role?(Role::MERCHANT)
              %ul.dropdown-menu
                %li.nav-label Merchant
                %li= link_to 'My Deals', promotions_path
                %li= link_to 'My Vouchers', merchant_vouchers_path
                -#%li= link_to 'Reports', reports_merchant_vendor_path(current_user.vendor)
                %li= link_to 'Payments', show_payments_merchant_vendor_path(current_user.vendor)
                %li.nav-label Profile
                %li= link_to 'Change password', edit_user_registration_path
                %li= link_to 'Log out', destroy_user_session_path, :method => :delete
            - elsif admin_user?
              %ul.dropdown-menu
                %li.nav-label Admin
                %li= link_to 'My Vouchers', merchant_vouchers_path
                %li= link_to 'Site Admin', site_admin_path
                - if current_user.has_role?(Role::SUPER_ADMIN)
                  %li= link_to 'Rails Admin', rails_admin_path
                %li.nav-label Profile
                %li= link_to 'Edit profile', edit_profile_user_path(current_user)
                %li= link_to 'Change password', edit_user_registration_path
                %li= link_to 'Log out', destroy_user_session_path, :method => :delete
            - else
              %ul.dropdown-menu
                %li.nav-label User
                %li= link_to 'My Vouchers', merchant_vouchers_path
                %li.nav-label Profile
                %li= link_to 'Edit profile', edit_profile_user_path(current_user)
                %li= link_to 'Change password', edit_user_registration_path
                %li= link_to 'Log out', destroy_user_session_path, :method => :delete
          %li.user-email.hidden-phone
            == #{gravatar_for current_user, :size => 30, :title => 'Edit this image in your profile'}      
%section.header-fixed-top
  .container
    %header
      .row-fluid
        .span3.logo 
          %h1= link_to(image_tag("logo.png", :class => "brand", :alt => "logo"), deals_path(:deals => false))
        .span9
          %span.sub-headline If you think it's <span class="highlight">awesome</span>  chances are we already found it 
          .pull-right.visible-desktop
            = link_to I18n.t('feedback_prompt'), feedback_path, :class => 'btn btn-feedback'
          - if current_user.nil?  
            %div.visible-phone
              = link_to 'Sign in / Register', new_user_session_path, :class => ' btn btn-danger btn-register'
            -#%form.navbar-search.pull-right
            -#%input.search-query{:type => 'text', :placeholder => 'Search'}
.space-medium

