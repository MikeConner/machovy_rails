<h1>Listing orders</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Email</th>
    <th>Amount</th>
    <th>Stripe card token</th>
    <th>Promotion</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.description %></td>
    <td><%= order.email %></td>
    <td><%= order.amount %></td>
    <td><%= order.stripe_card_token %></td>
    <td><%= order.promotion_id %></td>
    <td><%= order.user_id %></td>
    <td><%= link_to 'Show', merchant_order_path(order) %></td>
    <td><%= link_to 'Edit', edit_merchant_order_path(order) %></td>
    <td><%= link_to 'Destroy', [:merchant, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

