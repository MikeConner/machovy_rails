.space
.container
  .row
    .span5.offset1
      .sign-in-title
        %h4 Already a member? Sign in:
      .sign-in-body
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = render :partial => 'shared/flash_messages'
          = f.label :email
          %div
            = f.email_field :email
          = f.label :password
          %div
            = f.password_field :password
          - if devise_mapping.rememberable?
            %div
              %br
              = f.check_box :remember_me 
              = f.label :remember_me
          .sign-in-footer
            = f.submit "Sign in", {:class => 'btn btn-danger'}
            = render :partial => "devise/shared/sign_in_links"
    .span5
      .sign-in-title
        %h4 Create an account. Its free!
      .sign-in-body
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          - if @is_merchant
            - resource.build_vendor unless resource.vendor
            = f.fields_for :vendor do |vendor_form|
              = render :partial => 'vendor', :locals => { :f => vendor_form }
          = f.label :email
          %div
            = f.email_field :email
            %p.help-block 
              Type carefully. You will be sent a confirmation email.
          = f.label :password
          %div
            = f.password_field :password
            %p.help-block
              The longer the better. Include numbers for protein.
          = f.label :password_confirmation
          %div
            = f.password_field :password_confirmation
          .sign-in-footer
            = f.submit "Create your account", {:class => 'btn btn-danger'}
