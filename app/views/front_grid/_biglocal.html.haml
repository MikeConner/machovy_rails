.fatbox.box.tallbox.isotope-item.item
  .imgcrop
    - if promotion.zombie?
      .zombie_image
        %img(src="/assets/sold_out.png")
      = link_to image_tag(promotion.teaser_image_url(:product_front_page).to_s), promotion_path(promotion), :style => 'opacity:0.4;' 
    - else
      = link_to image_tag(promotion.teaser_image_url(:product_front_page).to_s, :style => 'width:100%;'), promotion_path(promotion)
  .row-fluid
    %h4= truncate(sanitize(promotion.title), :length => 42)
    - if !promotion.subtitle.nil?
      -# %h5= truncate(sanitize(promotion.subtitle), :length => 24)
    - else
      -# %h5 An amazing find
    %p.bigdesc= truncate(promotion.padded_description, :length => 140)
    = link_to "Only " + number_to_currency(promotion.price).to_s, promotion_path(promotion)
