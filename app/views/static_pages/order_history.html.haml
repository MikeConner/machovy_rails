.about-page-container
  .row
    .large-12.columns
      %h1== Orders for #{@email}
  .row.about-page
    .large-3.columns
      = render :partial => 'shared/admin_navigation'
    .large-9.columns
      - if @orders.empty?
        %h3 No Orders
      - else
        %table.table.zebra-striped
          %tr
            %th Date
            %th Name
            %th Promotion
            %th Quantity
            %th Total
          - @orders.each do |order|
            %tr
              %th= I18n.l order.created_at, :format => :long
              %th== #{order.first_name} #{order.last_name}
              %th== #{order.promotion.id}: #{order.promotion.title}
              %th= order.quantity
              %th= number_to_currency(order.total_cost)
