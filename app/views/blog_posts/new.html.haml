.container
  .row-fluid
    .span3
      = render :partial => 'admin_navigation'
    .span9
      .row-fluid
        .span12.column
          .box
            %h4.box-header.round-top Form Control States
            .box-container-toggle
              .box-content
                %form.form-horizontal
                  %fieldset
                    %legend
                      %h3 New Blog Post
                    .row-fluid
                      .span12
                        = javascript_include_tag "ckeditor/init"
                        = form_for @blog_post do |f|
                          = render :partial => 'shared/error_messages', :locals => { :errors => @blog_post.errors, :name => 'Blog Post' }
                          = render :partial => 'blog_fields', :locals => { :f => f }
                          .actions
                            = f.submit 'Create Blog Post'
