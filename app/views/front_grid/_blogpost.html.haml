- if !blogpost.nil?
  .skinnybox.box.tallbox.isotope-item.item
    .imgcropblog
      - if !blogpost.associated_image.file.nil?
        = link_to image_tag(blogpost.associated_image_url(:blog_content_photo).to_s, :style => 'width:100%;'), blog_post_path(blogpost)
      - else
        - if !blogpost.curator.nil?
          = link_to image_tag(blogpost.curator.picture_url(:product_front_page).to_s, :style => 'width:100%;'), blog_post_path(blogpost)
    .blogitem
      %h5
        = link_to truncate(blogpost.title, :length => 25), blog_post_path(blogpost)
      .borderLine
        .borderLine-left &nbsp;
        .borderLine-right &nbsp;
        %p
          = blogpost.truncated_body(:length => 120)