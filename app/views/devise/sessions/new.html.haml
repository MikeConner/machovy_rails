.container-fluid#signup
  .space.hidden-phone
  .row-fluid
    = render :partial => 'shared/flash_messages'
    .span5.offset1
      .sign-in-title
        %h4 Already a member? Sign in:
      .sign-in-body
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = f.email_field :email, {:placeholder => 'Email'}
          %br
          = f.password_field :password, {:placeholder => 'Password'}
          - if devise_mapping.rememberable?
            %br
            = f.check_box :remember_me 
            = f.label :remember_me
          .sign-in-footer
            = f.submit "Sign in", {:class => 'btn btn-danger', :style => 'margin-bottom:10px;'}
            = render :partial => "devise/shared/sign_in_links"
    .span5
      .space.visible-phone
      .sign-in-title
        %h4= I18n.t('create_account_action')
      .sign-in-body.sign-up-block
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = f.email_field :email, {:placeholder => 'Email'}
          %p.help-block 
            Type carefully. You will be sent a confirmation email.
          = f.password_field :password, {:placeholder => 'Password'}
          %p.help-block
            The longer the better. Include numbers for protein.
          = f.password_field :password_confirmation, {:placeholder => 'Password Confirmation'}
          .sign-in-footer
            = f.submit I18n.t('create_account'), {:class => 'btn btn-danger'}
.push.hidden-phone
