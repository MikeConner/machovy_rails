%h1= @curator.name
.row-fluid
  .span3
    = image_tag(@curator.picture_url(:contributor_photo).to_s)
  .span3
    = @curator.bio
    = link_to @curator.twitter, @curator.twitter_path, :target => "_blank"
  .span6
    - @curator.blog_posts.each do |post|
      %h4= link_to post.title, blog_post_path(post)
      %p= post.truncated_body
== #{@curator.name} Recommends
- @promotions.each do |promotion|
  = render :partial => 'shared/promotion_column', :locals => { :promotion => promotion }
.row-fluid
  .span6
    - @videos.each do |video|
      %iframe{:width => "480", :height => "295", :frameborder => "0", :allowfullscreen => "true", |
              :src => video.destination_url} |   
      = video.title
      = video.caption

