.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
        %span.icon-plus
      %h1.main-logo
        = link_to(image_tag("logo.png", :class => "logo", :alt => "logo"), deals_path(:deals => false))
      .nav-collapse
        %ul.nav.pull-right
          %li
          %li.dropdown
            %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
              Metro
              %b.caret
            %ul.dropdown-menu
              - Metro.all.each do |metro|
                %li
                  = link_to metro.name, metro_filter_path(:metro => metro.name)
          %li.dropdown 
            = link_to 'Deals & Interests', deals_path(:deals => true)
          %li.dropdown
            %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
              Lifestyle
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'Meet the Machovy Girls', '#'
                = link_to 'Everything Cars', '#'
                = link_to 'Mens Fashion', '#'
                = link_to 'Travel & Adventure', '#'
                = link_to 'Toys', '#'
          - if current_user.nil?
            %li.dropdown.pull-right
              = link_to 'SIGN IN', new_user_session_path
            %li.dropdown.pull-right
              = link_to 'SIGN UP', new_user_registration_path
          - else
            - if current_user.has_role?(Role::MERCHANT)
              %li.dropdown
                %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
                  MERCHANT
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'MY DEALS', promotions_path
                  %li 
                    = link_to 'REPORTS', reports_merchant_vendor_path(current_user.vendor)
                  %li
                    = link_to 'PAYMENTS', payments_merchant_vendor_path(current_user.vendor)
            - else
              %li.dropdown
                = link_to 'MY VOUCHERS', merchant_vouchers_path 
              - if admin_user?
                %li.dropdown
                  %a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
                    ADMIN
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Site Admin', site_admin_path
                    - if current_user.has_role?(Role::SUPER_ADMIN)
                      %li
                        = link_to 'Rails Admin', rails_admin_path
            %li.dropdown
              = link_to 'LOG OUT', destroy_user_session_path, :method => :delete
