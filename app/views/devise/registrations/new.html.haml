.row-fluid
  .span12
    %h2= @signup_message
#signup-form
.row-fluid
  .span6
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      - if @is_merchant
        - resource.build_vendor unless resource.vendor
        = f.fields_for :vendor do |vendor_form|
          = render :partial => 'vendor', :locals => { :f => vendor_form }
      = f.label :email
      %div
        = f.email_field :email, :class => "devise-input"
      = f.label :password
      %div
        = f.password_field :password, :class => "devise-input"
      = f.label :password_confirmation
      %div
        = f.password_field :password_confirmation, :class => "devise-input"  
      %div
        = f.submit "Sign up", :class => "devise-submit"
  - if @is_merchant
    .span6
      #merchant-sidebar
        = render :partial => 'vendor_header'
-#= render "devise/shared/links"
